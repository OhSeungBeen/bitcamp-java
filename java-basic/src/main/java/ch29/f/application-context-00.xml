<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="c1" class="ch29.f.CarFactory" factory-method="create">
		<constructor-arg value="sonata" />
	</bean>

	<bean id="d1" class="java.sql.Date" factory-method="valueOf">
		<constructor-arg value="2019-01-01" />
	</bean>
	
	
	<bean id="c2" factory-bean="carFactory" factory-method="create">
	<constructor-arg value="equus"/>
	</bean>

	<bean id="carFactory" class="ch29.f.CarFactory2">
		<constructor-arg>
		<bean id="blackBox" class="ch29.f.BlackBox" p:maker="비트자동차" p:model="오호라에디션"/>
		</constructor-arg>
	</bean>

</beans>

















